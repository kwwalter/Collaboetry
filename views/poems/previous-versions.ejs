<div class="previous-versions">
  <h1>Previous Versions</h1>
  <% poem.previousVersions.forEach(function(version, i) { %>
    <div class="version-divs<%= i %>" style="z-index: <%= i + 1 %>">
      <h2><a href='/poems/authors/<%= poem.poetID %>/<%= poem._id %>/<%= poem.previousVersions[i]._id %>'>Version <%= i + 1 %></a></h2>
      <% if (i === 0) { %>
        <p>(<b>First posted</b> by <%= poem.previousVersions[i].username %> on <%= poem.previousVersions[i].date %>)</p>
      <% } else { %>
        <p>(<b>Modified</b> by <%= poem.previousVersions[i].username %> on <%= poem.previousVersions[i].date %>)</p>
      <% } %>
    <% }); %>
    </div>
</div>
